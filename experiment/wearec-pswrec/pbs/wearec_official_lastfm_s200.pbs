#!/bin/bash
#PBS -P up63
#PBS -q dgxa100
#PBS -l ncpus=16
#PBS -l mem=16GB
#PBS -l ngpus=1
#PBS -l walltime=02:00:00
#PBS -l storage=scratch/up63+gdata/up63
#PBS -l wd
#PBS -j oe
#PBS -N wearec_lastfm_s200

# WEARec Official on LastFM, sequence length 200 (repo defaults otherwise).
# Submit from repo root:  qsub experiment/wearec-pswrec/pbs/wearec_official_lastfm_s200.pbs

set -e
cd "$PBS_O_WORKDIR"

echo "=== hostname ==="
hostname
echo "=== PBS_JOBID ==="
echo "$PBS_JOBID"

module purge
module load cuda/12.9.0

source /scratch/up63/kd6504/venvs/hopper-cu124/bin/activate

EXPERIMENT_DIR="experiment/wearec-pswrec"
LOG_DIR="log/wearec_official"
mkdir -p "${LOG_DIR}"
echo "$(date '+%Y-%m-%d %H:%M:%S')" > "${LOG_DIR}/.job_${PBS_JOBID}.started"

LIVE_LOG="wearec_official_lastfm_s200_live_${PBS_JOBID}.log"

python -u "${EXPERIMENT_DIR}/main.py" \
    --data_name LastFM \
    --model_type WEARec \
    --lr 0.001 \
    --alpha 0.3 \
    --num_heads 2 \
    --hidden_size 64 \
    --num_hidden_layers 2 \
    --max_seq_length 200 \
    --hidden_dropout_prob 0.5 \
    --attention_probs_dropout_prob 0.5 \
    --batch_size 256 \
    --epochs 200 \
    --patience 10 \
    --seed 42 \
    --train_name wearec_official_lastfm_s200 \
    2>&1 | tee "${LIVE_LOG}"

echo "Job completed."
